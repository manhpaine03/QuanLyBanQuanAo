@{
    ViewData["Title"] = "SpTheoLoai";
    Layout = "~/Views/Shared/_LayoutWeb.cshtml";
}

@using X.PagedList.Mvc.Core;
@model X.PagedList.IPagedList<TDanhMucSp>

@foreach (var item in Model)
{
    @await Html.PartialAsync("PartialSP",item)
}


@Html.PagedListPager(Model,page => Url.Action("SpTheoLoai",new {page=page}),new X.PagedList.Web.Common.PagedListRenderOptions()
{
    LiElementClasses = new List<String> {"page-item"},
    PageClasses = new List<String> {"page-link"}
}
)


